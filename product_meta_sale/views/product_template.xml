<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product_template_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_meta.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='meta_product_tmpl_line_ids']" position="inside">
                <group>
                    <field name="meta_visible_to_customer" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
